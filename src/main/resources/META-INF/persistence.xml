<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="sistema-avaliativo-PU" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.suauniversidade.projetoavaliativo.model.Usuario</class>
        <class>com.suauniversidade.projetoavaliativo.model.Perfil</class>
        <class>com.suauniversidade.projetoavaliativo.model.Curso</class>
        <class>com.suauniversidade.projetoavaliativo.model.UnidadeCurricular</class>
        <class>com.suauniversidade.projetoavaliativo.model.Turma</class>
        <class>com.suauniversidade.projetoavaliativo.model.ProcessoAvaliativo</class>
        <class>com.suauniversidade.projetoavaliativo.model.Formulario</class>
        <class>com.suauniversidade.projetoavaliativo.model.Questao</class>
        <class>com.suauniversidade.projetoavaliativo.model.Alternativa</class>
        <class>com.suauniversidade.projetoavaliativo.model.AvaliacaoRespondida</class>
        <class>com.suauniversidade.projetoavaliativo.model.Resposta</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistema_avaliativo?useTimezone=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/> <property name="jakarta.persistence.jdbc.password" value="seu_password"/> <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/> <property name="hibernate.format_sql" value="true"/> <property name="hibernate.hbm2ddl.auto" value="update"/> </properties>

    </persistence-unit>
</persistence>